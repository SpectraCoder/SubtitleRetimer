<Page
    x:Class="SubtitleRetimer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SubtitleRetimer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"    
    Background="{ThemeResource AcrylicBackground}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10,10,0,0" VerticalAlignment="Top">
            <Image Name="AppIcon" Width="25" Height="25"/>
            <TextBlock Text="Subtitle Retimer" VerticalAlignment="Center" Margin="5,0,0,0"/>
        </StackPanel>
        
        <Frame Name="PageArea" Grid.Row="1"/>
        <AppBarButton Name="ButtonAbout" ToolTipService.ToolTip="About this app" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="50" Height="50" Tapped="ButtonAbout_Tapped"/>
        
    </Grid>    
</Page>


